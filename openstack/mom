expect "*?assword: "
send $::env(password)\r
expect "*created*"
spawn juju add-machine ssh:ubuntu@$::env(ovnc1adminip) --public-key /home/ubuntu/.ssh/id_rsa.pub --private-key /home/ubuntu/.ssh/id_rsa
